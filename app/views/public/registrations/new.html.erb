<div class = "container">

<h2 class= "mt-3" >新規登録</h2>

   <%= form_with model: @end_user,url: end_user_registration_path do |f| %>
   <%= render "public/shared/error_messages", resource: resource %>
   <table class="table mt-5">
    <tbody>
     <tr>
      <td><%= f.label :ニックネーム %></td>
      <td><%= f.text_field :nickname, autofocus: true, placeholder: "任意のニックネーム", autocomplete: "last_name" %></td>
     </tr>
     <tr>
      <td><%= f.label :名前 %></td>
      <td>
       <%= f.text_field :last_name, autofocus: true, placeholder: "姓", autocomplete: "last_name" %>
       <%= f.text_field :first_name, autofocus: true, placeholder: "名", autocomplete: "first_name" %>
      </td>
     </tr>
     <tr>
      <td><%= f.label :フリガナ %></td>
      <td>
       <%= f.text_field :last_name_kana, autofocus: true,placeholder: "セイ", autocomplete: "last_name_kana" %>
       <%= f.text_field :first_name_kana, autofocus: true,placeholder: "メイ", autocomplete: "first_name_kana" %>
      </td>
     </tr>
     <tr>
      <td><%= f.label :生年月日 %></td>
      <td><%= f.date_select :birthday, use_month_numbers: true,start_year: 1930 ,autofocus: true, autocomplete: "birthday"%></td>
     </tr>
     <tr>
       <td><%= f.label :メールアドレス %></td>
       <td><%= f.email_field :email, autofocus: true, placeholder: "sample@sample.ne.jp", autocomplete: "email" ,size: "40x40" %></td>
     </tr>
     <tr>
       <td><%= f.label :郵便番号 %></td>
       <td><%= f.text_field :postal_code, autofocus: true, placeholder: "ハイフンなし", autocomplete: "postal_code" %></td>
     </tr>
     <tr>
       <td><%= f.label :住所 %></td>
       <td colspan="3"><%= f.text_field :address, autofocus: true, placeholder: "住所を入力" ,style: "width: 80%" ,autocomplete: "address" %></td>
     </tr>
     <tr>
       <td><%= f.label :電話番号 %></td>
       <td><%= f.text_field :telephone_number, autofocus: true,placeholder: "123-4567-8910", autocomplete: "telephone_number" %></td>
     </tr>
     <tr>
       <td><%= f.label :パスワード（6文字以上） %></td>
       <% if @minimum_password_length %>
       <% end %>
       <td><%= f.password_field :password,placeholder: "", autocomplete: "new-password" %></td>
     </tr>
     <tr>
       <td><%= f.label :パスワード（確認用）%></td>
       <td><%= f.password_field :password_confirmation,placeholder: "", autocomplete: "new-password" %></td>
     </tr>
     <div class="d-grid gap-2 col-6 mx-auto">
     <tr>
      <td></td>
      <td><%= f.submit "新規登録" ,class: "btn btn-success btn-md w-50" %></td>
      <td></td>
     </tr>
     </div>
     <% end %>
    </tbody>
   </table>

  <%= render "public/shared/links" %>

    </div>
   </div>
