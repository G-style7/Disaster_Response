<div class = "container main">
 <div class ="row toprow text-center" >
  <div class ="col mt-3">
   <h2>Log in</h2>
    <%= form_with model: @end_user, url: end_user_session_path,local:true do |f| %>
   <div class="field mt-3">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true,placeholder: "Email", autocomplete: "email", size: "30*30" %>
   </div>
   <div class="field mt-3">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, placeholder: "PassWord", autocomplete: "current-password" , size: "30*30"%>
   </div>
   <div class="actions mt-3">
    <%= f.submit "ログイン",class: "btn btn-success" %>
   </div>
    <% end %>
  </div>
 </div>
</div>

<%#= render "public/shared/links" %>
