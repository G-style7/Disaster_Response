<div class="card-list-container py-5">
 <div class="row toprow justify-content-center">

  <% @post_images.each do |post_image| %>
  <div class="col-8 col-lg-3 mx-5 text-card-container">
   <div class="card-deck">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_image_path(post_image.id) do %>
      <%= image_tag post_image.get_image(200,200), class: "card-img-top border"; %>
    <% end %>
    <div class="card-body">
      <div style="display: flex;">
        <div class="">
          <%= image_tag post_image.end_user.get_profile_image(90,90), class: "rounded-circle"; %>
        </div>
        <div style="margin-left: 30px;">
          <p class="">
            <%= link_to(post_image_path(post_image.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post_image.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= post_image.introduction %></p>
          <span><i class="fas fa-user"></i><%= post_image.end_user.nickname %> ｜ </span>
          <span><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class: "text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
 </div>
</div>
  <% end %>
  <%= paginate @post_images %>

</div>
</div>


