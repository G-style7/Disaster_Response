<div class ="container">
 <div class ="row justify-content-center" >
    <h3>投稿一覧</h3>
   </div>
     <table class = "table mt-3">
      <thead>
       <tr>
        <th>被害画像</th>
        <th>投稿日時</th>
        <th>タイトル</th>
        <th>災害種別</th>
        <th>場　所</th>
        <th>コメント</th>
       </tr>
      </thead>
      <tbody>
    <% @post_images.each do |post_image| %>
      <tr>
       <td>
        <%= link_to admin_post_image_path(post_image.id) do %> <%#詳細ページへ遷移したい %>
         <%= image_tag post_image.get_image(100,100) %>
        <% end %>
       </td>
       <td class="align-middle"><%= post_image.created_at.strftime('%Y/%m/%d %H:%M') %></td>
       <td class="align-middle"><%= post_image.title %></td>
       <td class="align-middle"><%= post_image.kind %></td>
       <td class="align-middle"><%= post_image.address %></td>
       <td class="align-middle"><%= link_to "#{post_image.post_comments.count} 件", post_image_path(post_image.id) %></td>
      </tr>
    <% end %>
      </tbody>
     </table>
 </div>
 <div class= "pagination">
  <%= paginate @post_images %>
 </div>
</div>
 <%#= post_image.end_user.nickname %>
