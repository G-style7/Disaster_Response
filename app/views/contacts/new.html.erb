<div class="container py-5">
 <div class="row toprow justify-content-center" style="height: 620px;">
<%= form_for(@contact, url: confirm_path) do |f| %>
  <div class="form-group ">
    <%= f.label :name, 'お名前*' %>
    <%= f.text_field :name, placeholder: "名前を入力してください", autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :message, 'メッセージ*' %>
    <%= f.text_area :message, placeholder: "メッセージをここに入力してください", size: '50x15', class: 'form-control' %>
  </div>

  <div>
    <%= f.submit '入力内容確認' %>
  </div>
<% end %>
 </div>
</div>
