<div class="container py-5">
 <div class="toprow" style="height: 620px;">

<div class ="row text-center">
 <div class = "col m-3" >
  <table class="table">
    <tbody>
      <tr>
        <td class="text-center" style="width: 30%;">お名前</td>
        <td><%= @contact.name %></td>
      </tr>
      <tr>
        <td class="text-center">メッセージ</td>
        <td style="white-space: pre-wrap;"><%= @contact.message %></td>
      </tr>
    </tbody>
  </table>
 </div>
</div>

<%= form_for(@contact) do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :phone_number %>
  <%= f.hidden_field :subject %>
  <%= f.hidden_field :message %>
  <div class ="row text-center">
  <div class="col">
    <%= f.submit '送信',class: "mt-3" %>
  </div>
  </div>
<% end %>
<%= form_for @contact, url: back_path do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :phone_number %>
  <%= f.hidden_field :subject %>
  <%= f.hidden_field :message %>
  <div class="col-3">
    <%= f.submit '入力画面に戻る',class: "mt-3" %>
  </div>
<% end %>
</div>
</div>