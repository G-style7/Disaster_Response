          <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
            <li class="nav-item">
             <i class="fa-solid fa-image mr-1"></i>
             <%= link_to "投稿一覧", admin_post_images_path , class: "" %>
